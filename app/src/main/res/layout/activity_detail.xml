<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/activity_detail">
    <GridLayout android:layout_width="wrap_content" android:layout_height="100dp"
                android:columnCount="2" android:rowCount="2" android:layout_alignParentTop="true"
                android:layout_centerInParent="true" android:id="@+id/detail_info">
        <ImageView android:id="@+id/detail_logo" android:layout_columnSpan="1"
                   android:layout_rowSpan="2"
                   android:layout_margin="5dp"/>
        <TextView android:id="@+id/detail_truck_name" android:layout_columnSpan="1"
                  android:layout_rowSpan="1"
                  android:textStyle="bold"/>
        <TextView android:id="@+id/detail_category" android:layout_columnSpan="1"
                  android:layout_rowSpan="1"/>
    </GridLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_below="@id/detail_info">
        <ListView android:id="@android:id/list" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
        <!--android:id="@android:id/empty" android:text="@string/no_schedules"-->
        <!--/>-->
    </LinearLayout>
    <Button android:layout_width="70dp" android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/foreveralone"
            android:onClick="switchMap"/>
</RelativeLayout>