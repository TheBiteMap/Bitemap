<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:background="@drawable/rounded_corner">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/schedules_time" android:textSize="12dp" android:textStyle="bold"
              android:textColor="@color/white" android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/schedules_address" android:textSize="12dp" android:textStyle="bold"
              android:textColor="@color/white" android:layout_below="@id/schedules_time"
              android:layout_centerHorizontal="true"/>
    <GridView android:layout_width="190dp"
              android:layout_height="wrap_content"
              android:numColumns="3"
              android:id="@+id/map_info_grid_view"
              android:verticalSpacing="10dp"
              android:layout_margin="10dp" android:layout_below="@id/schedules_address"/>
</RelativeLayout>